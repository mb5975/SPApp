@model SPApp.Models.Login.LoginViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Registration.css" />


    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/site.js"></script>

</head>
<body>
    <header id="default-header">
        <div id="header-only-div">
            <span class="logo-text">MOJA KNJIŽNICA&trade;</span>
        </div>
    </header>

    <div id="login-container-div">
        @if (!String.IsNullOrEmpty(Model.ErrorMsg))
        {
            <div>
                @Html.DisplayFor(model => model.ErrorMsg)
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.SuccessMsg))
        {
            <div>
                @Html.DisplayFor(model => model.SuccessMsg)
            </div>
        }
        <div id="login-form-div">
            <form id="login-form" method="post" action="@Url.Action("LoginUser", "Home")">
                <div>Dobrodošli nazaj!</div>
                @Html.TextBoxFor(model => model.Username, new { type = "text", placeholder = "Uporabniško ime", oninvalid = "this.setCustomValidity('Vnesite uporabniško ime.')", oninput = "setCustomValidity('')", required = "required" })
                @*<input type="text" placeholder="uporabniško ime" required oninvalid="this.setCustomValidity('Vnesite uporabniško ime.')" oninput="setCustomValidity('')" />*@
                <br />
                @Html.TextBoxFor(model => model.Password, new { id = "password", type = "password", placeholder = "Geslo", oninvalid = "this.setCustomValidity('Vnesite geslo.')", oninput = "setCustomValidity('')", required = "required" })
                @*<input id="password" type="password" placeholder="Geslo" required oninvalid="this.setCustomValidity('Vnesite geslo.')" oninput="setCustomValidity('')"/>*@
                <br />
                <button class="linkToButton-default" type="submit">Vpis</button>

            </form>
        </div>

        <br />
        <a href='@Url.Action("Index")'>Domov</a>
    </div>
    
    <div>
    </div>
</body>
</html>
